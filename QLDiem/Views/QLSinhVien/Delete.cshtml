@model QLDiem.Models.SinhVien

@section Styles {
    <link rel="stylesheet" href="~/css/QLSV.css" asp-append-version="true" />
}

<div class="form-container">
    <div class="form-title text-danger">⚠ Xác nhận xóa sinh viên</div>

    <div class="detail-row">
        <div class="detail-label">Mã SV:</div>
        <div class="detail-value">@Model.MaSv</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Họ tên:</div>
        <div class="detail-value">@Model.HoTen</div>
    </div>

    <div class="detail-row">
        <div class="detail-label">Lớp:</div>
        <div class="detail-value">@Model.Lop</div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaSv" />

        <div class="form-actions">
            <a asp-action="Index" class="btn-back">← Hủy</a>
            <button type="submit" class="btn-danger-main">Xóa</button>
        </div>
    </form>
</div>
