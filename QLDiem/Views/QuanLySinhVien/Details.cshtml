@model QLDiem.Models.SinhVien
@section Styles {
    <link rel="stylesheet" href="~/css/QLSV.css" asp-append-version="true" />
}
@{
    ViewData["Title"] = "Chi Tiết Sinh Viên";
}

<h1>Chi tiết sinh viên</h1>

<div>
    <h4>SinhVien</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoTen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoTen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Lop)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lop)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NgaySinh)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgaySinh)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.MaSv">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<hr />
<h4>BẢNG ĐIỂM SINH VIÊN</h4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Học phần</th>
            <th>Học kỳ</th>
            <th>Năm học</th>
            <th>QT</th>
            <th>CK</th>
            <th>TK</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.BangDiem != null && ViewBag.BangDiem.Count > 0)
        {
            foreach (var d in ViewBag.BangDiem)
            {
                <tr>
                    <td>@d.TenHP</td>
                    <td>@d.HocKy</td>
                    <td>@d.NamHoc</td>
                    <td>@d.DiemQt</td>
                    <td>@d.DiemCk</td>
                    <td>@d.DiemTk</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">
                    Sinh viên chưa có điểm
                </td>
            </tr>
        }
    </tbody>
</table>
