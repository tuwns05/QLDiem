@model IEnumerable<QLDiem.Models.SinhVien>

@{
    ViewData["Title"] = "Quản lý sinh viên";
}

@section Styles {
    <link rel="stylesheet" href="~/css/QLSV.css" asp-append-version="true" />
}

<div class="page-wrapper">
    <!-- ===== HEADER ===== -->
    <div class="page-header">
        <h2>Quản lý sinh viên</h2>
        <a asp-action="Create" class="btn btn-add">Thêm sinh viên</a>
    </div>

    <!-- ===== FILTER ===== -->
    <form method="get" asp-action="Index" class="filter-box">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label>Mã học phần</label>
                <select name="maHP" class="form-control"
                        asp-items="ViewBag.HocPhans">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <div class="col-md-4">
                <label>Lớp sinh hoạt</label>
                <input type="text"
                       name="lopSH"
                       class="form-control"
                       value="@ViewBag.LopSH"
                       placeholder="VD: CNTT1" />
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    Lọc
                </button>
            </div>
        </div>
    </form>

    <!-- ===== TABLE ===== -->
    <div class="table-wrapper">
        <div class="table">
            <table class="table table-student">
                <thead>
                    <tr>
                        <th>Họ tên</th>
                        <th>Lớp</th>
                        <th>Giới tính</th>
                        <th>Ngày sinh</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HoTen</td>
                            <td>@item.Lop</td>
                            <td>@item.GioiTinh</td>
                            <td>@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Details"
                                   asp-route-id="@item.MaSv"
                                   class="btn btn-info btn-sm">Chi tiết</a>

                                <a asp-action="Edit"
                                   asp-route-id="@item.MaSv"
                                   class="btn btn-warning btn-sm">Sửa</a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.MaSv"
                                   class="btn btn-danger btn-sm">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
