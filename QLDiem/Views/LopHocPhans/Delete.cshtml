@model QLDiem.Models.LopHocPhan

@{
    ViewData["Title"] = "Xóa lớp học phần";
}
@section Styles {
    <link rel="stylesheet" href="~/css/QLD.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nhapdiem.css" asp-append-version="true" />
}

<h1 style="color:#e74c3c;">Xác nhận xóa lớp học phần</h1>

<div class="table-wrapper" style="max-width:750px; margin:auto;">

    <!-- ================= CẢNH BÁO ================= -->
    <div style="
        background:#ffe5e5;
        padding:20px;
        border-radius:10px;
        margin-bottom:25px;
        border-left:6px solid #e74c3c;">

        <h3 style="margin-bottom:10px; color:#c0392b;">
            ⚠️ Cảnh báo
        </h3>

        <p style="margin:0; color:#555;">
            Bạn có chắc chắn muốn xóa lớp học phần này không?
            Hành động này <b>không thể hoàn tác</b>.
        </p>
    </div>

    <!-- ================= THÔNG TIN LỚP ================= -->
    <div style="
        background:#f8fafc;
        padding:25px;
        border-radius:10px;
        margin-bottom:30px;">

        <h4 style="
            margin-bottom:20px;
            padding-bottom:12px;
            border-bottom:2px solid #3498db;
            color:#2c3e50;">

            📋 Thông tin lớp học phần
        </h4>

        <div style="
            display:grid;
            grid-template-columns:160px 1fr;
            gap:15px;
            font-size:0.95rem;">

            <div><b>Mã lớp học phần:</b></div>
            <div style="font-weight:600; color:#3498db;">
                @Model.MaLopHp
            </div>

            <div><b>Học phần:</b></div>
            <div>@Model.MaHpNavigation?.TenHp</div>

            <div><b>Học kỳ:</b></div>
            <div>Học kỳ @Model.HocKy</div>

            <div><b>Năm học:</b></div>
            <div>@Model.NamHoc</div>

        </div>
    </div>

    <!-- ================= ACTION ================= -->
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaLopHp" />

        <div style="
            display:flex;
            justify-content:center;
            gap:12px;
            padding-top:15px;
            border-top:1px solid #eee;">

            <button type="submit"
                    class="btn btn-xoa">
                🗑 Xác nhận xóa
            </button>

            <a asp-action="Index"
               class="btn btn-ct">
                Hủy bỏ
            </a>
        </div>
    </form>
</div>
