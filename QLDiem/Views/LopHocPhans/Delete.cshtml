@model QLDiem.Models.LopHocPhan
@{
    ViewData["Title"] = "Xóa lớp học phần";
}

<h1 style="color: #e74c3c;">Xác nhận xóa lớp học phần</h1>

<div class="table-wrapper" style="max-width: 700px; margin: 0 auto;">
    <div style="background: #ffe5e5; padding: 20px; border-radius: 5px; margin-bottom: 25px; border-left: 4px solid #e74c3c;">
        <h3 style="margin: 0 0 10px 0; color: #c0392b;">⚠️ Cảnh báo</h3>
        <p style="margin: 0; color: #555;">
            Bạn có chắc chắn muốn xóa lớp học phần này không? Hành động này không thể hoàn tác.
        </p>
    </div>

    <div style="background: #f8fafc; padding: 20px; border-radius: 5px; margin-bottom: 25px;">
        <h4 style="margin: 0 0 15px 0; color: #2c3e50; padding-bottom: 10px; border-bottom: 2px solid #3498db;">
            Thông tin lớp học phần
        </h4>

        <div style="display: grid; grid-template-columns: 150px 1fr; gap: 15px;">
            <div style="font-weight: 600; color: #555;">Mã lớp HP:</div>
            <div>@Html.DisplayFor(model => model.MaLopHp)</div>

            <div style="font-weight: 600; color: #555;">Học phần:</div>
            <div>@Html.DisplayFor(model => model.MaHpNavigation.TenHp)</div>

            <div style="font-weight: 600; color: #555;">Học kỳ:</div>
            <div>Học kỳ @Html.DisplayFor(model => model.HocKy)</div>

            <div style="font-weight: 600; color: #555;">Năm học:</div>
            <div>@Html.DisplayFor(model => model.NamHoc)</div>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MaLopHp" />
        <div style="display: flex; gap: 10px; justify-content: center;">
            <button type="submit" class="btn btn-xoa" style="padding: 12px 30px; font-size: 1rem;">
                Xác nhận xóa
            </button>
            <a asp-action="Index" class="btn btn-ct" style="padding: 12px 30px; font-size: 1rem; display: inline-block;">
                Hủy bỏ
            </a>
        </div>
    </form>
</div>