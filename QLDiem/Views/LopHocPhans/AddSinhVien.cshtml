@model QLDiem.Models.DangKyMonHoc
@{
    ViewData["Title"] = "Thêm sinh viên vào lớp";
}

<h1>Thêm sinh viên vào lớp học phần</h1>

<div class="table-wrapper" style="max-width: 700px; margin: 0 auto;">
    <form asp-action="AddSinhVien" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" style="background: #fee; padding: 15px; border-radius: 5px; margin-bottom: 20px;"></div>

        <div style="margin-bottom: 20px;">
            <label asp-for="MaLopHp" style="display: block; margin-bottom: 8px; font-weight: 600; color: #555;">
                Lớp học phần <span style="color: #e74c3c;">*</span>
            </label>
            <select asp-for="MaLopHp" asp-items="ViewBag.MaLopHp" class="form-select"
                    style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px; font-size: 0.95rem;">
                <option value="">-- Chọn lớp học phần --</option>
            </select>
            <span asp-validation-for="MaLopHp" class="text-danger" style="font-size: 0.85rem;"></span>
        </div>

        <div style="margin-bottom: 25px;">
            <label asp-for="MaSv" style="display: block; margin-bottom: 8px; font-weight: 600; color: #555;">
                Sinh viên <span style="color: #e74c3c;">*</span>
            </label>
            <select asp-for="MaSv" asp-items="ViewBag.MaSv" class="form-select"
                    style="width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px; font-size: 0.95rem;">
                <option value="">-- Chọn sinh viên --</option>
            </select>
            <span asp-validation-for="MaSv" class="text-danger" style="font-size: 0.85rem;"></span>
        </div>

        <div style="background: #e8f4f8; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
            <strong style="color: #2c3e50;">📌 Lưu ý:</strong>
            <p style="margin: 10px 0 0 0; color: #555; font-size: 0.9rem;">
                Hệ thống sẽ tự động điền học kỳ, năm học và ngày đăng ký dựa trên lớp học phần được chọn.
            </p>
        </div>

        <div style="display: flex; gap: 10px; padding-top: 20px; border-top: 1px solid #eee;">
            <button type="submit" class="btn-add" style="margin: 0;">Thêm sinh viên</button>
            <a asp-action="Index" class="btn btn-ct" style="padding: 10px 20px; display: inline-block;">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}