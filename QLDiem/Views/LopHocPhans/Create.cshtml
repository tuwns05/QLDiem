@model QLDiem.Models.HocPhan

@{
    ViewData["Title"] = "Thêm học phần";
}
@section Styles {
    <link rel="stylesheet" href="~/css/QLD.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nhapdiem.css" asp-append-version="true" />
}

<h1>Thêm học phần mới</h1>

<div class="table-wrapper" style="max-width: 750px; margin: auto;">

    <form asp-action="Create" method="post">

        <div asp-validation-summary="ModelOnly"
             class="text-danger"
             style="background:#fee; padding:15px; border-radius:8px; margin-bottom:25px;">
        </div>

        <!-- ===== MÃ HỌC PHẦN ===== -->
        <div style="margin-bottom:22px;">
            <label class="form-label fw-semibold">
                Mã học phần <span class="text-danger">*</span>
            </label>

            <input asp-for="MaHp"
                   class="form-control"
                   placeholder="VD: HP001" />

            <span asp-validation-for="MaHp" class="text-danger"></span>
        </div>

        <!-- ===== TÊN HỌC PHẦN ===== -->
        <div style="margin-bottom:22px;">
            <label class="form-label fw-semibold">
                Tên học phần <span class="text-danger">*</span>
            </label>

            <input asp-for="TenHp"
                   class="form-control"
                   placeholder="VD: Lập trình Web" />

            <span asp-validation-for="TenHp" class="text-danger"></span>
        </div>

        <!-- ===== SỐ TÍN CHỈ ===== -->
        <div style="margin-bottom:22px;">
            <label class="form-label fw-semibold">
                Số tín chỉ
            </label>

            <input asp-for="SoTinChi"
                   type="number"
                   min="1"
                   class="form-control" />
        </div>

        <!-- ===== HỆ SỐ ===== -->
        <div class="form-group">
            <label class="control-label">Hệ số</label>
            <input name="heSoInput" class="form-control"
                   placeholder="Nhập phân số (vd: 4/6) hoặc số thập phân (vd: 0.67)" />
            <span asp-validation-for="HeSo" class="text-danger"></span>
        </div>
        <!-- ===== ACTION ===== -->
        <div style="
            display:flex;
            gap:12px;
            padding-top:20px;
            border-top:1px solid #eee;">

            <button type="submit"
                    class="btn-add"
                    style="margin:0;">
                ➕ Lưu học phần
            </button>

            <a asp-action="Index"
               class="btn btn-ct">
                Quay lại
            </a>
        </div>

    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
